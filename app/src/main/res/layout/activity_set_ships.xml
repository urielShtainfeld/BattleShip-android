<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:id="@+id/SetShipsLayout"
    android:paddingBottom="16dp"

    tools:context="com.example.ushtinfeld.battleship_uriel.Set_Ships"
    android:background="@drawable/game_background">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:stretchColumns="*"
        android:id="@+id/ships"
        >
    </TableLayout>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_above="@+id/linearLayout2"
        android:layout_below="@+id/ships"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        android:id="@+id/board"
        >
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:outlineProvider="bounds"
        android:weightSum="1"
        android:soundEffectsEnabled="true"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/Start"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#b195c0d3"
                android:backgroundTint="#ec517281"
                android:onClick="startAfterSet"
                android:layout_marginRight="20dp"
                android:text="@string/start"
                android:textColor="@color/yellow" />

            <Button
                android:id="@+id/Random"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:background="#b195c0d3"
                android:backgroundTint="#ec517281"
                android:onClick="SetRandomShips"
                android:layout_marginLeft="20dp"
                android:text="@string/random"
                android:textColor="@color/yellow"/>
        </LinearLayout>

</RelativeLayout>
